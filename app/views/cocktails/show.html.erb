<%= link_to "Back home", cocktails_path %>


<div class="row">
  <div class="col totheight" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1536510648730-1dd9ea3768ea?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80)">
  </div>
  <div class="col totheight">
    <h1>🍸 <%=@cocktail.name %> 🍸</h1>

    <h4>Let's make it</h4>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li> <%= dose.ingredient.name %> : <%= dose.description %>
          <%= link_to "Delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
  </div>
</div>
